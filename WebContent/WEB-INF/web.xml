<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
    <display-name>WebStore</display-name>

 
    <context-param>
        <param-name>JDBC_DRIVER</param-name>
        <param-value>org.mariadb.jdbc.Driver</param-value>
    </context-param>

    <context-param>
        <param-name>JDBC_URL</param-name>
        <param-value>jdbc:mysql://localhost/Shop</param-value>
    </context-param>

    <context-param>
        <param-name>JDBC_LOGIN</param-name>
        <param-value>root</param-value>
    </context-param>

    <context-param>
        <param-name>JDBC_PASSWORD</param-name>
        <param-value>darkorbitdu32</param-value>
    </context-param>

	<jsp-config>
		<taglib>
			<taglib-uri>http://koor.fr/tld/extratags</taglib-uri>
			<taglib-location>/WEB-INF/extratags.tld</taglib-location>
		</taglib>
	</jsp-config>
	
	
	<session-config>
		<session-timeout>20</session-timeout>
	</session-config>

    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>

</web-app>